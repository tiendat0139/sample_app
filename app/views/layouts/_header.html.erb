<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".app_name"), "/", id: "logo" %>
    <nav>
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul id="navbar-menu"
          class="nav navbar-nav navbar-right collapse navbar-collapse">
        <li><%= link_to t(".home"), root_path %></li>
        <li><%= link_to t(".help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".user"), "#" %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              <%= t ".account"%> <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".sign_out"), logout_path,
                                      data: {"turbo-method": :delete} %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".sign_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
